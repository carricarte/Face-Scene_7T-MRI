#!/bin/sh

#SBATCH --job-name=searchlight
#SBATCH --ntasks=1
#SBATCH --ntasks-per-node=1
#SBATCH --qos=standard
#SBATCH --time=2-12:00:00
#SBATCH --mem-per-cpu=3gb

INPUTDIR="$1"
