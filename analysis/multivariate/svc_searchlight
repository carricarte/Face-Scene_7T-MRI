ANATDIR="$4"
ITERATION="$5"
SCRIPTDIR="$6"

python "$SCRIPTDIR/svc_searchlight.py" "$INPUTDIR" "$OUTPUTDIR" "$WORKINGDIR" "$ITERATION" "$SCRIPTDIR"